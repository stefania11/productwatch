<div class="panel panel-default">
  <div class="panel-heading panel-title">Reviews</div>
  <div class="panel-body">
    <% @reviews.each.with_index(1) do |review, i| %>
    
    <h4><%= i %>) <%= review.title %></h4>
    <p>Rating: <%= review.rating %></p>
    <p>Usefulness: <%= review.votes %></p>
    <p>Author: <%= review.author_name %></p>
    <div class="author_url"><%= review.author_url %></div>
    <p>Published: <%= review.date %></p>
    <hr>
    <% if review.overall_sentiment == "negative." %>
    <div class='negative-review' style='color:red'><p>The most negative sentence of the review: <%= review[:low_sentence] %></p></div>
    <div class='overall' style='color:red'>The overall sentinment of the review: <%= review[:overall_sentiment] %></p></div>
<% else %>
<div class='positive-review'style='color:green'><p>The most positive sentence of the review: <%= review[:high_sentence] %></p></div>
<div class='overall' style='color:green'>The overall sentinment of the review: <%= review[:overall_sentiment] %></p></div>
<% end %>



<p><%= review.content %></p>
<hr>
<% end %>
</div>
</div>
</div>
