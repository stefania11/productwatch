<div class="item-reviews">
  <h1>Total Search Results: <%= @results[:search_results] %></h1><hr>
  <% @results[:items].each do |item| %>
    <img src="<%= item[:image_url] %>">
    <h3><%= item[:title] %></h3>

    <% item[:reviews].each.with_index(1) do |review, i| %>
      <h4><%= i %>) <%= review[:title] %></h4>
      <p>Rating: <%= review[:rating] %></p>
      <p>Author: <%= review[:author] %></p>
      <p>Usefulness: <%= review[:votes] %></p>
      <p>Published: <%= review[:date] %></p>
      <hr>
  <p>The most negative sentence of the review: <%= review[:low_sentence] %></p>
      <p>The most positive sentence of the review: <%= review[:high_sentence] %></p>
      <p>The overall sentinment of the review: <%= review[:overall_sentiment] %></p>

      <p><%= review[:content] %></p>
      <hr>
    <% end %>
  <% end %>
</div>
