<div class="container">
  <div class="row">
    <% @products.each do |product| %>
    <% if product %>
    <form method="get" action="/results">
      <input type="hidden" name="product[id]" value="<%= product.id %>" >
      <input type="hidden" name="product[title]" value="<%= product.title %>" >
      <input type="hidden" name="product[image_url]" value="<%= product.image_url %>" >
      <div class="col-lg-3 col-md-4 col-xs-6 thumb" style="overflow:hidden;height:260px;min-width:300px;">
        <input type="image" class="thumbnail" src="<%= product.image_url %>" style="height:220px;width:100%;min-width:300px;min-height:100px;padding-bottom:0px;margin-bottom:5px;">
        <p style="font-size:11px"><%= product.title %></p>
      </div>
    </form>
    <% end %>
  <% end %>
  </div>
</div>
